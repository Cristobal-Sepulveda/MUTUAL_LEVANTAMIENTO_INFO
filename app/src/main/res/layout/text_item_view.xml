<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name ="levantamientoItem"
            type ="com.example.android.mutual_levantamiento.data.DBO.LEVANTAMIENTO_DBO"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_normal">

        <TextView
            android:id="@+id/levantamientoSala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_very_small"
            android:text="@{levantamientoItem.sala}"
            android:textAppearance="?attr/textAppearanceHeadline5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="TEXTTEXTTEXT" />

        <TextView
            android:id="@+id/levantamientoUnidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_very_small"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:text="@{levantamientoItem.unidad}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/levantamientoSala"
            tools:text="TEXTTEXTTEXT" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>